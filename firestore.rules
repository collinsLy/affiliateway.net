rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Per your spec: generic authenticated access to `dashboard/{docId}`
    match /dashboard/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Ensure the app's existing `dashboards/{docId}` collection also works
    match /dashboards/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Deny any other paths by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
